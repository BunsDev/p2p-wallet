{
  "compilerOptions": {
    "lib": ["es2015", "DOM"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "./src",
    "outDir": "dist/",
    "typeRoots": ["../../node_modules/@types"]
  },
  "include": ["src/"],
  "exclude": ["**/node_modules"]
}
